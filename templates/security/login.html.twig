{% extends 'base.html.twig' %}
{% block title 'Se Connecter' %}

{% block body %}



<form action = '{{ path('login') }}' method = 'POST'>
    <div class="container mt-4">
    {% if error %}

        <div class="alert alert-danger">
            {{ error.messageKey | trans(error.messagedata, 'security') }} // permet de traduire le message error en français et qu'il soit compréhensible
        </div>

    {% endif %}
        <div class="form-group mb-3">
            <label for="username">Nom d'utilisateur</label>
            <input type='text' id='username' name='_username' class="form-control" value="{{ last_username }}"></input>
        </div>
        <div class="form-group mb-3">
            <label for="password">Mot de passe</label>
            <input type='password' id='password' name='_password' class="form-control" ></input>
        </div>

        <button type="submit" class="btn btn-primary"> Se connecter </button>
    </div>

</form>

{% endblock %}